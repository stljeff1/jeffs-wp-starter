
<article class="post-listing-item {{ itemClass }}" data-location="{{ post.link }}">
	<div class="post-header">
		<h3 class="post-title"><a href="{{ post.link }}">{{ post.title }}</a></h3>
		<div class="post-meta-data">
			<div class="post-date">{{ post.date }}</div>
			<div class="post-category {{ post.category.slug }}">
				{{ post.category }}
			</div>
		</div>
	</div>
	<p class="post-excerpt">{{ post.preview() }}</p>
</article>